{
	"name": "@nuxtus/nuxtus",
	"description": "Directus/Nuxt boilerplate with Tailwind CSS.",
	"version": "1.7.1",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nuxtus/nuxtus.git"
	},
	"engines": {
		"node": "20"
	},
	"keywords": [
		"Directus",
		"Nuxt",
		"boilerplate",
		"Tailwind",
		"Tailwindcss"
	],
	"author": "Craig Harman",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nuxtus/nuxtus/issues"
	},
	"homepage": "https://github.com/nuxtus/nuxtus#readme",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"client": "cd client && npm run dev -- -o",
		"server": "cd server && npx directus start",
		"start": "concurrently \"npm run server\" \"npm run client\""
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.0.0",
		"@semantic-release/release-notes-generator": "^12.0.0",
		"concurrently": "8.2.2",
		"semantic-release": "^23.0.0"
	},
	"release": {
		"branches": "main",
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"breaking": true,
							"release": "major"
						},
						{
							"type": "feat",
							"release": "minor"
						},
						{
							"type": "revert",
							"release": "patch"
						},
						{
							"type": "refactor",
							"release": "minor"
						},
						{
							"type": "fix",
							"release": "patch"
						},
						{
							"type": "docs",
							"scope": "README",
							"release": "patch"
						},
						{
							"type": "chore",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/changelog",
				{
					"changelogTitle": "Changelog"
				}
			],
			"@semantic-release/npm",
			"@semantic-release/git",
			"@semantic-release/github"
		]
	},
	"volta": {
		"node": "20.11.1"
	}
}